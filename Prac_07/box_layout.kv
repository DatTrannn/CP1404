BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            on_press: app.clear_all()
            size_hint_x: 0.3
        TextInput:
            id: input_name
            text: ''
            size_hint_x: 0.7

    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 0.3
        Label:
            id: output_label
            text: 'Enter your name'
            color: (1, 1, 0, 1)
            size_hint_x: 0.7
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Check'
            on_press: app.calculate_grade()
            size_hint_x: 0.3
        TextInput:
            id: input_score
            text: app.grade
            size_hint_x: 0.7

